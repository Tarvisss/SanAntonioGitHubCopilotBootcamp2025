@page "{customUrl}/{urlId}"
@model EditUrlModel
@{
    ViewData["Title"] = "Edit URL";
}

<h2>Edit URL</h2>
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
<form method="post">
    <div class="mb-3">
        <label asp-for="InputUrl" class="form-label">URL</label>
        <input asp-for="InputUrl" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title (optional)</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description (optional)</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
